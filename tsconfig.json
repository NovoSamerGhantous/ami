{
  "compilerOptions": {
    "module": "ES2020",
    "target": "es2015",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declarationDir": "types",
    "moduleResolution": "Node",
    
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}